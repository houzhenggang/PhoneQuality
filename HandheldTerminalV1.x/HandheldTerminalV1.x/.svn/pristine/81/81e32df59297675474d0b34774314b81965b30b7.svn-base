<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:weightSum="7"
              android:paddingLeft="5.0dp"
              android:paddingRight="5.0dp"
              android:layout_width="match_parent"
              android:gravity="center_vertical"
              android:layout_height="wrap_content"
              android:minHeight="?android:attr/listPreferredItemHeightSmall"
              android:layout_gravity="center_vertical">

	<LinearLayout
			android:layout_width="0.0dip"
			android:layout_weight="3"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

		<ImageView
				android:id="@+id/ta_icon"
				android:layout_width="32.0dp"
				android:layout_height="32.0dp"
				android:src="@drawable/ic_launcher"
				android:text="10:20:45"
				android:gravity="center"
				android:textSize="@dimen/font_size_medium"/>

		<TextView
				android:id="@+id/ta_appName"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="支付宝钱包"
				style="@style/AppTrafficValue"/>
	</LinearLayout>

	<TextView
			android:id="@+id/ta_mobile"
			android:layout_width="0.0dip"
			android:layout_weight="2"
			android:layout_height="wrap_content"
			android:text="10.3M"
			style="@style/AppTrafficValue"/>

	<TextView
			android:id="@+id/ta_wifi"
			android:layout_width="0.0dip"
			android:layout_weight="2"
			android:layout_height="wrap_content"
			android:text="1121.0M"
			style="@style/AppTrafficValue"/>

</LinearLayout>